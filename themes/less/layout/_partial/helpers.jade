mixin a_with_current(href, content, id)
  - var url = url_for(href)
  if (href == '.' && is_home()) || is_current(href)
    a.current(href=url)
      i(class='fa' + ' ' + id)= ' ' + content
  else if (href == '.' && is_post())
    a.current(href=url)
      i(class='fa' + ' ' + id)= ' ' + content
  else if (href == 'about/')
    a.current(href=url)
      i(class='fa' + ' ' + id)= ' ' + content
  else if (href == 'tags/' && is_tag())
    a.current(href=url)
      i(class='fa' + ' ' + id)= ' ' + content
  else if (href == 'archives/' && is_archive())
    a.current(href=url)
      i(class='fa' + ' ' + id)= ' ' + content
  else if (href == 'categories/' && is_category())
    a.current(href=url)
      i(class='fa' + ' ' + id)= ' ' + content
  else
    a(href=url)
      i(class='fa' + ' ' + id)= ' ' + content

mixin title(page)
  if page
    if page.title
      = page.title
    else
      = _p('no-title')
